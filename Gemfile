source 'https://rubygems.org'

# Bundle edge Rails instead: bundle updategem 'rails', github: 'rails/rails'
gem 'rails'

# Use sqlite3 as the database for Active Record in test and postgres in
# development and production
gem 'sqlite3'
gem 'pg'

# Use SCSS
# gem 'sass', '~> 3.4', '>= 3.4.22'
gem 'sass'

# Use SCSS for stylesheets
# gem 'sass-rails', '~> 4.0.5'
gem 'sass-rails'

# Use Uglifier as compressor for JavaScript assets
# gem 'uglifier', '>= 1.3.0'
gem 'uglifier'

# Use CoffeeScript for .js.coffee assets and views
# gem 'coffee-rails', '~> 4.0.0'
gem 'coffee-rails'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
gem 'therubyracer',  platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster.
# Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
# gem 'jbuilder', '~> 2.0'
gem 'jbuilder'

# bundle exec rake doc:rails generates the API under doc/api.
# gem 'sdoc', '~> 0.4.0',          group: :doc
gem 'sdoc',          group: :doc

# Spring speeds up development by keeping your application running in the
# background. Read more: https://github.com/rails/spring
gem 'spring',        group: :development

# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'
gem 'bcrypt'

# Use Puma as multithreading server
gem 'puma'

# Use Procfile
gem 'foreman', group: [:production, :development]

# Use HAML templates
gem 'haml-rails'

# Use Carrierwave to handle files
gem 'carrierwave'
gem 'mini_magick'

# Use a reset CSS
gem 'normalize-rails'

# Use Neat CSS Grid
gem 'neat', '~> 1.9.1'
#gem 'neat'

# Paginate results
# gem 'will_paginate', '~> 3.0'
gem 'will_paginate'

# Use some of JQuery UI modules
gem 'jquery-ui-rails'

# Use heroku 12 factor app gem
gem 'rails_12factor', group: [:development, :production]

# gem 'bourbon'